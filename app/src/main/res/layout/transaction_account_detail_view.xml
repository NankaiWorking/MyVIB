<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_icon_from_account"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_home_height"
        android:layout_margin="@dimen/spacing_2_16dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/icon_account_thanhtoan2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_1_8dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingRight="@dimen/spacing_1_8dp">

        <com.vnapnic.myvib.customs.FontTextView
            android:id="@+id/tv_acc_des"
            style="@style/NORMAL_TEXT_STYLE_BLACK" />

        <com.vnapnic.myvib.customs.FontTextView
            android:id="@+id/tv_acc_id"
            style="@style/NORMAL_TEXT_STYLE_BLACK"
            android:hint="@string/not_select_account"
            android:textColor="@color/silver_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_acc_money"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:textColor="@color/orange_text" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_acc_money_title"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_marginLeft="@dimen/spacing_0_4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
