<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.vnapnic.myvib.customs.FontTextView
        style="@style/SMALL_TEXT_STYLE_WHITE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_1_6dp"
        android:text="@string/link" />

    <com.vnapnic.myvib.customs.MyListView
        android:id="@+id/myLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_1"
        android:layout_marginBottom="@dimen/spacing_3_24dp"
        android:layout_marginTop="-2dp"
        android:paddingLeft="@dimen/spacing_1_8dp"
        android:paddingRight="@dimen/spacing_1_8dp" />

    <!--<com.vnapnic.myvib.customs.ImageAutoScale-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/layout_1"-->
        <!--android:layout_marginTop="2px"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:contentDescription="@string/img_description"-->
        <!--android:scaleType="center"-->
        <!--android:src="@drawable/account_shadow" />-->

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bg1_height"
            android:background="@drawable/account_bg1">

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_2_16dp"
                android:text="@string/net_position"
                android:textColor="@color/white"
                android:textSize="@dimen/text_3_14sp" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_2_16dp"
                android:layout_marginRight="@dimen/spacing_2_16dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_3_14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bg2_height"
            android:background="@drawable/account_bg2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/spacing_2_16dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_credits"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_3_14sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_5_20sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_3_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/spacing_2_16dp"
                    android:layout_weight="1.0"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_debits"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_3_14sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_5_20sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_3_14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/layout_1"
        android:background="@drawable/dropshadow" />
</RelativeLayout>
