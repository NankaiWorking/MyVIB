<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvLinkVIB"
        android:layout_marginBottom="@dimen/spacing_1_8dp"
        android:layout_marginLeft="@dimen/spacing_1_8dp"
        android:layout_marginRight="@dimen/spacing_1_8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_1_8dp"
            android:layout_marginTop="@dimen/spacing_1_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/code"
                style="@style/NORMAL_TEXT_STYLE_BLACK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center"
                android:padding="@dimen/spacing_0_4dp"
                android:text="@string/code"
                android:textColor="@color/orange_text" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6.0"
                android:orientation="horizontal">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:gravity="center_vertical"
                    android:textColor="@color/orange_text" />

                <TextView
                    android:id="@+id/sell"
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:text="@string/buy"
                    android:textColor="@color/orange_text" />

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.0"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:text="@string/sell"
                    android:textColor="@color/orange_text" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/update"
            style="@style/SMALL_TEXT_STYLE_BLACK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_1_8dp"
            android:paddingLeft="@dimen/spacing_2_16dp"
            android:paddingRight="@dimen/spacing_2_16dp"
            android:paddingTop="@dimen/spacing_1_8dp"
            android:textColor="@color/silver_text"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLinkVIB"
        style="@style/SMALL_TEXT_STYLE_WHITE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_1_6dp"
        android:text="@string/link" />
</RelativeLayout>
