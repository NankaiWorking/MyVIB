<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_1_8dp"
    android:paddingLeft="@dimen/spacing_1_8dp"
    android:paddingRight="@dimen/spacing_1_8dp">

    <com.vnapnic.myvib.customs.FontTextView
        android:id="@+id/titleTab"
        style="@style/NORMAL_TEXT_STYLE_WHITE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/progressive_saving" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_1_8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_3_14sp"
            android:layout_marginTop="@dimen/text_3_14sp"
            android:orientation="horizontal">

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/term"
                style="@style/NORMAL_TEXT_STYLE_BLACK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_weight="3.0"
                android:paddingLeft="@dimen/spacing_0_2dp"
                android:paddingRight="@dimen/spacing_0_2dp"
                android:text="@string/term"
                android:textColor="@color/orange_text" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/vnd"
                style="@style/NORMAL_TEXT_STYLE_BLACK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/vnd"
                android:textColor="@color/orange_text" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/usd"
                style="@style/NORMAL_TEXT_STYLE_BLACK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/usd"
                android:textColor="@color/orange_text" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/eur"
                style="@style/NORMAL_TEXT_STYLE_BLACK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/eur"
                android:textColor="@color/orange_text" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:divider="@color/line_color"
            android:dividerHeight="@dimen/line_height"
            android:listSelector="@drawable/slide_menu_bg_selector"
            android:orientation="vertical" />

        <com.vnapnic.myvib.customs.FontTextView
            android:id="@+id/update"
            style="@style/SMALL_TEXT_STYLE_BLACK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/spacing_1_8dp"
            android:paddingLeft="@dimen/spacing_1_8dp"
            android:paddingRight="@dimen/spacing_1_8dp"
            android:paddingTop="@dimen/spacing_1_8dp"
            android:text="@string/note_interest_rates"
            android:textColor="@color/silver_text"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
