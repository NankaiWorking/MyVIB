<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.vnapnic.myvib.customs.FontTextView
        style="@style/SMALL_TEXT_STYLE_WHITE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_1_6dp"
        android:text="@string/link" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bill_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_3_24dp">

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvReceiptType"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/receipt_title" />

            <ImageView
                android:layout_width="@dimen/header_height"
                android:layout_height="@dimen/header_height"
                android:contentDescription="@string/img_description"
                android:padding="@dimen/spacing_1_6dp"
                android:src="@drawable/icon_transfer_success" />

            <com.vnapnic.myvib.customs.FontTextView
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_amount"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vnapnic.myvib.customs.FontTextView
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/receipt_no" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_receipt_no"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="207926696612123" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvFrom"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/from" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_from_name"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGUYEN VAN A" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_from_id"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="048704060060307" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvTo"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/to" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_to_name"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="VIB" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_to_id"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvBank"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/txtBankName"
                android:visibility="gone" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvBankName"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:visibility="gone" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvDes"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/description" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_description"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:gravity="center"
                android:maxLines="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvFee"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/fee_amount"
                android:visibility="gone" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tvFeeValue"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutLater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.vnapnic.myvib.customs.FontTextView
                    style="@style/SMALL_TEXT_STYLE_SILVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_1_6dp"
                    android:text="@string/transfer_later" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/tvLater"
                    style="@style/SMALL_TEXT_STYLE_BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:maxLines="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutScheduleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <com.vnapnic.myvib.customs.FontTextView
                    style="@style/SMALL_TEXT_STYLE_SILVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_1_6dp"
                    android:text="@string/repeat" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/tvRepeat"
                    style="@style/SMALL_TEXT_STYLE_BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:maxLines="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />

                <com.vnapnic.myvib.customs.FontTextView
                    style="@style/SMALL_TEXT_STYLE_SILVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_1_6dp"
                    android:text="@string/start_on" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/tvStart"
                    style="@style/SMALL_TEXT_STYLE_BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:maxLines="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />

                <com.vnapnic.myvib.customs.FontTextView
                    style="@style/SMALL_TEXT_STYLE_SILVER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_1_6dp"
                    android:text="@string/end_on" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/tvEnd"
                    style="@style/SMALL_TEXT_STYLE_BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />
            </LinearLayout>

            <com.vnapnic.myvib.customs.FontTextView
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/date" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_date"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06/07/2016" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_country"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_1_6dp"
                android:text="GMT +07:00 indochina Time" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_detail_header"
                style="@style/SMALL_TEXT_STYLE_SILVER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1_6dp"
                android:text="@string/detail"
                android:visibility="gone" />

            <com.vnapnic.myvib.customs.FontTextView
                android:id="@+id/tv_detail"
                style="@style/SMALL_TEXT_STYLE_BLACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"></ProgressBar>
</RelativeLayout>
