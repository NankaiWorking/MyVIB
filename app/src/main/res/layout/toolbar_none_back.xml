<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/toolbar_back"
        android:layout_width="@dimen/button_header_height"
        android:layout_height="@dimen/button_header_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/button_header_padding"
        android:background="@drawable/btn_back_custom" />

    <com.vnapnic.myvib.customs.FontTextView
        android:id="@+id/title"
        style="@style/HEADER_TEXT_STYLE_WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center" />

    <com.vnapnic.myvib.customs.FontTextView
        android:id="@+id/txt_start"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_header_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/button_header_padding"
        android:gravity="center"
        android:padding="@dimen/spacing_0_4dp"
        android:text="@string/start"
        android:textColor="@color/orange_text"
        android:textSize="@dimen/text_3_14sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/icon_right"
        android:layout_width="@dimen/spacing_3_24dp"
        android:layout_height="@dimen/spacing_3_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/button_header_padding"
        android:visibility="gone" />
</RelativeLayout>