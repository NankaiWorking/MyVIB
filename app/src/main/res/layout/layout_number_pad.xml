<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/numericPad"
    android:layout_width="match_parent"
    android:layout_height="@dimen/keyboard_height"
    android:background="@color/line_color"
    android:dividerPadding="0dp"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/num_pad_1_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_1_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_2_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_2_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_3_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_3_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/num_pad_4_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_4_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_5_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_5_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_6_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_6_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_6"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/num_pad_7_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_7_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_7"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_8_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_8_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_9_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_9_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_pad_9"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:id="@+id/num_pad_0_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/num_pad_0_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_0_4dp"
                android:paddingTop="@dimen/spacing_0_4dp"
                android:text="@string/num_pad_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_0_4dp"
                android:paddingTop="@dimen/spacing_0_4dp"
                android:text="@string/num_pad_done"
                android:textColor="@color/black"
                android:textSize="@dimen/text_6_24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_pad_backspace_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="1.0"
            android:background="@drawable/btn_num_pad_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/img_description"
                android:src="@drawable/icon_backspace" />
        </LinearLayout>
    </TableRow>
</TableLayout>
