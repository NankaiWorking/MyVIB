<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tvLinkVIB"
        style="@style/SMALL_TEXT_STYLE_WHITE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_1_6dp"
        android:text="@string/link" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvLinkVIB">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_1_8dp"
                android:paddingRight="@dimen/spacing_1_8dp"
                android:text="@string/close_account_note"
                android:textColor="@color/white"
                android:textSize="@dimen/text_2_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/reg_text5"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_amount"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/img_description"
                        android:padding="@dimen/spacing_1_8dp"
                        android:src="@drawable/icon_edit_dark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/princ"
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/principal_amount"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_princ"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/interest_amount"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_interest"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/fee_amount"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_fee"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/settlement_account"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_settlement"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:layout_marginRight="@dimen/spacing_1_8dp"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/NORMAL_TEXT_STYLE_BLACK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_1_8dp"
                    android:text="@string/reason_to_close"
                    android:textColor="@color/orange_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="@dimen/line_height"
                    android:layout_marginRight="@dimen/line_height"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.vnapnic.myvib.customs.FontEditext
                        android:id="@+id/edt_reason"
                        style="@style/NORMAL_TEXT_STYLE_BLACK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@color/transparent"
                        android:editable="false"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_an_amount"
                        android:paddingBottom="@dimen/spacing_2_16dp"
                        android:paddingLeft="@dimen/spacing_1_8dp"
                        android:paddingRight="@dimen/spacing_1_8dp"
                        android:paddingTop="@dimen/spacing_2_16dp"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
