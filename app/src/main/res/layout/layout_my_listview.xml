<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/line_height"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvNoData"
        style="@style/NORMAL_TEXT_STYLE_WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/spacing_6_default_48dp"
        android:text="@string/no_message"
        android:textColor="@color/silver_text2"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_2_16dp"
        android:background="@color/transparent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="@dimen/dialog_pb_width"
            android:layout_height="@dimen/dialog_pb_width"
            android:layout_centerInParent="true"
            android:indeterminate="true" />
    </RelativeLayout>
</RelativeLayout>
