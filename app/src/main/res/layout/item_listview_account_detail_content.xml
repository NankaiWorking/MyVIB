<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_bar1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_title_indicator_footer_indicator_underline_padding"
    android:layout_below="@+id/menu_jump"
    android:background="@drawable/item_date_bg"
    android:paddingLeft="@dimen/header_padding"
    android:paddingRight="@dimen/header_padding">

    <TextView
        android:id="@+id/txt_title"
        style="@style/NORMAL_TEXT_STYLE_BLACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/header_padding"
        android:text="7 thg 7 2016" />

    <TextView
        android:id="@+id/txt_current"
        style="@style/NORMAL_TEXT_STYLE_BLACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/header_padding" />
</RelativeLayout>