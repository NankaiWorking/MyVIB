<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_schedule_height"
        android:background="@drawable/pay_someone_new_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_mobile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_lang_width"
                android:layout_marginTop="@dimen/spacing_1_8dp"
                android:layout_marginBottom="@dimen/spacing_0_4dp"
                android:src="@drawable/icon_pay_to_mobile" />

            <com.vnapnic.myvib.customs.FontTextView
                style="@style/text_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pay_to_mobile"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_lang_width"
                android:layout_marginTop="@dimen/spacing_1_8dp"
                android:layout_marginBottom="@dimen/spacing_0_4dp"
                android:src="@drawable/icon_pay_to_email" />

            <com.vnapnic.myvib.customs.FontTextView
                style="@style/text_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pay_to_email"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing_1_8dp"
        android:text="@string/account_address_book"
        android:textColor="@color/orange_text" />


    <LinearLayout
        android:id="@+id/listBill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_bg_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.vnapnic.myvib.customs.FontTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_indicator_footer_indicator_underline_padding"
            android:background="@drawable/item_date_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_2_16dp"
            android:text="@string/mobile_number"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_address_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/icon_home_height"
                    android:layout_marginLeft="@dimen/spacing_1_8dp"
                    android:layout_marginRight="@dimen/spacing_2_16dp"
                    android:src="@drawable/account_icon_yellow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_1_8dp"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGUYEN VAN A" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spacing_0_2dp"
                        android:text="0936066386"
                        android:textSize="@dimen/text_2_12sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.vnapnic.myvib.customs.FontTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_title_indicator_footer_indicator_underline_padding"
            android:background="@drawable/item_date_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_2_16dp"
            android:text="@string/email_address"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_address_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/icon_home_height"
                    android:layout_marginLeft="@dimen/spacing_1_8dp"
                    android:layout_marginRight="@dimen/spacing_2_16dp"
                    android:src="@drawable/account_icon_yellow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_1_8dp"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title2"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGUYEN VAN B" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/phone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spacing_0_2dp"
                        android:text="vib@gmail.com"
                        android:textSize="@dimen/text_2_12sp" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_below="@id/layout_email"
                android:layout_marginLeft="@dimen/line_height"
                android:layout_marginRight="@dimen/line_height"
                android:background="@color/line_color" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>